/dts-v1/;
#include "r8a7742.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "iwg21m";
	compatible = "iw,iwg21m", "renesas,r8a7742";

	aliases {
		serial2 = &scifa2;
		eth = &avb;
	};

	memory@40000000 {
		device_type = "memory";
		reg = <0 0x40000000 0 0x40000000>;
	};

	memory@200000000 {
		device_type = "memory";
		reg = <2 0x00000000 0 0x40000000>;
	};

	lbsc {
		#address-cells = <1>;
		#size-cells = <1>;
	};

	vcc_lvds: regulator@4 {
		compatible = "regulator-fixed";

		regulator-name = "panel vcc";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-always-on;
	};

	reg_3p3v: 3p3v {
		compatible = "regulator-fixed";
		regulator-name = "3P3V";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-always-on;
		regulator-boot-on;
	};

	panel_edt: panel@0 {
		compatible = "edt,etm0700g0dh6", "simple-panel";
		power-supply = <&vcc_lvds>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				#address-cells = <1>;
				#size-cells = <0>;
				reg = <0>;
				panel_input: endpoint {
					reg = <0>;
					remote-endpoint = <&du_out_lvds0>;
				};
			};
		};
	};

	buzzer {
		compatible = "pwm-backlight";
		pwms = <&tpu 0 5000000 GPIO_ACTIVE_HIGH>;
		brightness-levels = <0 4 8 16 32 64 128 255>;
		default-brightness-level = <7>;
		pinctrl-0 = <&buzzer_pins>;
		pinctrl-names = "default";
	};

	fan {
		compatible = "pwm-backlight";
		pwms = <&tpu 1 5000000 GPIO_ACTIVE_HIGH>;
		brightness-levels = <0 4 8 16 32 64 128 255>;
		default-brightness-level = <7>;
		pinctrl-0 = <&fan_pins>;
		pinctrl-names = "default";
	};

	backlight {
		compatible = "pwm-backlight";
		pwms = <&tpu 2 5000000 GPIO_ACTIVE_HIGH>;
		brightness-levels = <0 4 8 16 32 64 128 255>;
		default-brightness-level = <7>;
		pinctrl-0 = <&backlight_pins>;
		pinctrl-names = "default";
	};
};

&extal_clk {
	clock-frequency = <20000000>;
};

&pfc {
	scifa2_pins: serial2 {
		renesas,groups = "scifa2_data_c";
		renesas,function = "scifa2";
	};

	avb_pins: avb {
		renesas,groups = "avb_mdio", "avb_gmii", "avb_phy_int";
		renesas,function = "avb";
	};

	i2c0_pins: i2c0 {
		renesas,groups = "i2c0";
		renesas,function = "i2c0";
	};

	i2c1_pins: i2c1 {
		renesas,groups = "i2c1_c";
		renesas,function = "i2c1";
	};

	i2c2_pins: i2c2 {
		renesas,groups = "i2c2_b";
		renesas,function = "i2c2";
	};

	i2c3_pins: i2c3 {
		renesas,groups = "i2c3";
		renesas,function = "i2c3";
	};

	buzzer_pins: buzzer {
		renesas,groups = "tpu0_to0";
		renesas,function = "tpu0";
	};

	fan_pins: fan {
		renesas,groups = "tpu0_to1";
		renesas,function = "tpu0";
	};

	backlight_pins: backlight {
		renesas,groups = "tpu0_to2";
		renesas,function = "tpu0";
	};

	du_pins: du {
		renesas,groups = "du_rgb666", "du_sync_1", "du_clk_out_0";
		renesas,function = "du";
	};

	mmc1_4_pins: mmc1_4 {
		renesas,groups = "mmc1_data4", "mmc1_ctrl";
		renesas,function = "mmc1";
	};

	mmc1_8_pins: mmc1_8 {
		renesas,groups = "mmc1_data8", "mmc1_ctrl";
		renesas,function = "mmc1";
	};
};

&scifa2 {
	pinctrl-0 = <&scifa2_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&avb {
	pinctrl-0 = <&avb_pins>;
	pinctrl-names = "default";

	phy-handle = <&phy0>;
	renesas,no-ether-link;
	status = "okay";

	phy0: ethernet-phy@0 {
		reg = <3>;
		micrel,led-mode = <1>;
	};
};

&wdt0{
	status = "okay";
};

&i2c0 {
	pinctrl-0 = <&i2c0_pins>;
	pinctrl-names = "default";

	status = "okay";
	clock-frequency = <400000>;

	rtc@68 {
		compatible = "bq32000";
		reg = <0x68>;
	};
};

&i2c1 {
	pinctrl-0 = <&i2c1_pins>;
	pinctrl-names = "default";

	status = "disabled";
	clock-frequency = <400000>;
};

&i2c2	{
	status = "okay";
	clock-frequency = <400000>;
	pinctrl-0 = <&i2c2_pins>;
	pinctrl-names = "default";

};

&i2c3 {
	pinctrl-0 = <&i2c3_pins>;
	pinctrl-names = "default";
	status = "okay";
	clock-frequency = <400000>;
};

&tpu {
	status = "okay";
};

&du {
	pinctrl-0 = <&du_pins>;
	pinctrl-names = "default";
	status = "okay";

	clocks = <&mstp7_clks R8A7742_CLK_DU0>,
		<&mstp7_clks R8A7742_CLK_DU1>,
		<&mstp7_clks R8A7742_CLK_LVDS0>;
	clock-names = "du.0", "du.1", "lvds.0";

	ports {
		port@0 {
			 endpoint {
				remote-endpoint = <&panel_input>;
			};
		};
	};
};

&gpio5 {
	lcd-power-eb-gpio{
		gpio-hog;
		gpios = <28 GPIO_ACTIVE_HIGH>;
		output-high;
		line-name = "lcd-power-eb-gpio";
	};
};

&mmcif1 {
	pinctrl-0 = <&mmc1_4_pins>;
	pinctrl-1 = <&mmc1_8_pins>;
	pinctrl-names = "default";

	vmmc-supply = <&reg_3p3v>;
	bus-width = <4>;
	non-removable;
	status = "okay";
};
